#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define BASE 0
#define NAV  1
#define SYM  2
#define ADJ  3
#define TVP1 4
#define TVP2 5

&mt {
    quick-tap-ms = <200>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <275>;
};

/ {
    combos {
        compatible = "zmk,combos";

        combo_L5 {
            timeout-ms = <100>;
            key-positions = <22 23 24>;
            bindings = <&to 5>;
            layers = <0>;
        };

        combo_enter {
            bindings = <&kp ENTER>;
            key-positions = <16 17>;
            layers = <0>;
        };

        rhs_combo_tab {
            bindings = <&kp TAB>;
            key-positions = <27 28>;
        };

        combo_esc {
            bindings = <&kp ESCAPE>;
            key-positions = <13 12>;
        };

        lhs_combo_tab {
            bindings = <&kp TAB>;
            key-positions = <24 23>;
        };

        combo_L4 {
            bindings = <&to 4>;
            key-positions = <27 28 29>;
            timeout-ms = <100>;
            layers = <0>;
        };

        combo_L2 {
            bindings = <&tog 2>;
            key-positions = <16 17 18>;
            timeout-ms = <100>;
            layers = <2 0>;
        };

        tmux_split_v {
            bindings = <&tmux_split_v>;
            key-positions = <25 34>;
        };

        tmux_split_h {
            bindings = <&none>;
            key-positions = <35 27>;
        };
    };

    macros {
        gif: gif {
            label = "giphy";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp N2>,
                <&macro_release>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp G &kp I &kp F>;
        };

        PrScr: PrScr {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(S) &kp LEFT_GUI>, <&macro_press>;

            label = "PRSCR";
        };

        tmux_split_v: tmux_split_v {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A) &kp V>;
            label = "TMUX_SPLIT_V";
        };
    };

    behaviors {
        Cut: Cut {
            compatible = "zmk,behavior-tap-dance";
            label = "CUT";
            #binding-cells = <0>;
            bindings = <&kp LEFT_CONTROL>, <&kp X>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄

        base {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

